-- Create Button Function
local function createButton(text, icon, order, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 0, 35)
    button.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    button.BorderSizePixel = 0
    button.Text = icon .. " " .. text
    button.TextSize = 12
    button.TextColor3 = Color3.fromRGB(220, 220, 220)
    button.Font = Enum.Font.GothamBold
    button.TextXAlignment = Enum.TextXAlignment.Left
    button.LayoutOrder = order
    button.Parent = content
    
    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0, 6)
    buttonCorner.Parent = button
    
    local status = Instance.new("TextLabel")
    status.Size = UDim2.new(0, 40, 0, 20)
    status.Position = UDim2.new(1, -45, 0.5, -10)
    status.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    status.Text = "OFF"
    status.TextSize = 10
    status.TextColor3 = Color3.fromRGB(200, 200, 200)
    status.Font = Enum.Font.GothamBold
    status.Parent = button
    
    local statusCorner = Instance.new("UICorner")
    statusCorner.CornerRadius = UDim.new(0, 10)
    statusCorner.Parent = status
    
    button.MouseButton1Click:Connect(function()
        callback(button, status)
    end)
    
    return button, status
end

-- Create Player Button
local function createPlayerButton(targetPlayer, scrollFrame, listType, color)
    local buttonTable = listType == "Hump" and playerButtonsHump or playerButtonsBring
    
    if buttonTable[targetPlayer] then
        return
    end
    
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 0, 40)
    button.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    button.BorderSizePixel = 0
    button.Text = "  " .. targetPlayer.Name
    button.TextSize = 12
    button.TextColor3 = Color3.fromRGB(220, 220, 220)
    button.Font = Enum.Font.GothamBold
    button.TextXAlignment = Enum.TextXAlignment.Left
    button.Parent = scrollFrame
    
    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0, 6)
    buttonCorner.Parent = button
    
    button.MouseButton1Click:Connect(function()
        -- Deselect previous
        if listType == "Hump" then
            if selectedPlayerHump and playerButtonsHump[selectedPlayerHump] then
                playerButtonsHump[selectedPlayerHump].BackgroundColor3 = Color3.fromRGB(25, 25, 25)
            end
            selectedPlayerHump = targetPlayer
        else
            if selectedPlayerBring and playerButtonsBring[selectedPlayerBring] then
                playerButtonsBring[selectedPlayerBring].BackgroundColor3 = Color3.fromRGB(25, 25, 25)
            end
            selectedPlayerBring = targetPlayer
        end
        
        button.BackgroundColor3 = color
        print("Selected: " .. targetPlayer.Name)
    end)
    
    buttonTable[targetPlayer] = button
end

-- Update Player Lists
local function updatePlayerLists()
    -- Clear old buttons
    for player, button in pairs(playerButtonsHump) do
        if not Players:FindFirstChild(player.Name) then
            button:Destroy()
            playerButtonsHump[player] = nil
        end
    end
    
    for player, button in pairs(playerButtonsBring) do
        if not Players:FindFirstChild(player.Name) then
            button:Destroy()
            playerButtonsBring[player] = nil
        end
    end
    
    -- Add new players
    for _, targetPlayer in pairs(Players:GetPlayers()) do
        if targetPlayer ~= player then
            createPlayerButton(targetPlayer, plhScroll, "Hump", Color3.fromRGB(50, 255, 120))
            createPlayerButton(targetPlayer, plbScroll, "Bring", Color3.fromRGB(255, 100, 255))
        end
    end
end

-- Auto update player lists
spawn(function()
    while wait(1) do
        pcall(updatePlayerLists)
    end
end)

-- FLY
createButton("Fly (WASD + Space/Shift)", "üïäÔ∏è", 1, function(btn, status)
    states.fly = not states.fly
    
    if states.fly then
        local bodyVel = Instance.new("BodyVelocity")
        bodyVel.MaxForce = Vector3.new(9e9, 9e9, 9e9)
        bodyVel.Velocity = Vector3.new(0, 0, 0)
        bodyVel.Parent = rootPart
        
        local bodyGyro = Instance.new("BodyGyro")
        bodyGyro.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
        bodyGyro.P = 9e4
        bodyGyro.CFrame = rootPart.CFrame
        bodyGyro.Parent = rootPart
        
        connections.fly = RunService.Heartbeat:Connect(function()
            if not states.fly then return end
            
            local moveDir = Vector3.new(0, 0, 0)
            
            if UserInputService:IsKeyDown(Enum.KeyCode.W) then
                moveDir = moveDir + camera.CFrame.LookVector
            end
            if UserInputService:IsKeyDown(Enum.KeyCode.S) then
                moveDir = moveDir - camera.CFrame.LookVector
            end
            if UserInputService:IsKeyDown(Enum.KeyCode.A) then
                moveDir = moveDir - camera.CFrame.RightVector
            end
            if UserInputService:IsKeyDown(Enum.KeyCode.D) then
                moveDir = moveDir + camera.CFrame.RightVector
            end
            if UserInputService:IsKeyDown(Enum.KeyCode.Space) then
                moveDir = moveDir + Vector3.new(0, 1, 0)
            end
            if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then
                moveDir = moveDir - Vector3.new(0, 1, 0)
            end
            
            if moveDir.Magnitude > 0 then
                moveDir = moveDir.Unit
            end
            
            bodyVel.Velocity = moveDir * flySpeed
            bodyGyro.CFrame = camera.CFrame
        end)
        
        status.Text = "ON"
        status.BackgroundColor3 = Color3.fromRGB(50, 255, 120)
        status.TextColor3 = Color3.fromRGB(0, 0, 0)
    else
        if connections.fly then connections.fly:Disconnect() end
        if rootPart:FindFirstChild("BodyVelocity") then
            rootPart:FindFirstChild("BodyVelocity"):Destroy()
        end
        if rootPart:FindFirstChild("BodyGyro") then
            rootPart:FindFirstChild("BodyGyro"):Destroy()
        end
        
        status.Text = "OFF"
        status.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        status.TextColor3 = Color3.fromRGB(200, 200, 200)
    end
end)

-- NOCLIP
createButton("Noclip (Walk Through Walls)", "üëª", 2, function(btn, status)
    states.noclip = not states.noclip
    
    if states.noclip then
        connections.noclip = RunService.Stepped:Connect(function()
            if states.noclip then
                for _, part in pairs(character:GetDescendants()) do
                    if part:IsA("BasePart") then
                        part.CanCollide = false
                    end
                end
            end
        end)
        
        status.Text = "ON"
        status.BackgroundColor3 = Color3.fromRGB(50, 255, 120)
        status.TextColor3 = Color3.fromRGB(0, 0, 0)
    else
        if connections.noclip then connections.noclip:Disconnect() end
        
        for _, part in pairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.CanCollide = true
            end
        end
        
        status.Text = "OFF"
        status.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        status.TextColor3 = Color3.fromRGB(200, 200, 200)
    end
end)

-- SPEED
createButton("Speed Hack (150 Speed)", "‚ö°", 3, function(btn, status)
    states.speed = not states.speed
    
    if states.speed then
        humanoid.WalkSpeed = speedValue
        status.Text = "ON"
        status.BackgroundColor3 = Color3.fromRGB(50, 255, 120)
        status.TextColor3 = Color3.fromRGB(0, 0, 0)
    else
        humanoid.WalkSpeed = 16
        status.Text = "OFF"
        status.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        status.TextColor3 = Color3.fromRGB(200, 200, 200)
    end
end)

-- JUMP POWER
createButton("Jump Power (200 Power)", "ü¶ò", 4, function(btn, status)
    states.jump = not states.jump
    
    if states.jump then
        humanoid.JumpPower = jumpValue
        status.Text = "ON"
        status.BackgroundColor3 = Color3.fromRGB(50, 255, 120)
        status.TextColor3 = Color3.fromRGB(0, 0, 0)
    else
        humanoid.JumpPower = 50
        status.Text = "OFF"
        status.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        status.TextColor3 = Color3.fromRGB(200, 200, 200)
    end
end)

-- INFINITE JUMP
createButton("Infinite Jump", "‚ôæÔ∏è", 5, function(btn, status)
    states.infJump = not states.infJump
    
    if states.infJump then
        connections.infJump = UserInputService.JumpRequest:Connect(function()
            if states.infJump then
                humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
            end
        end)
        
        status.Text = "ON"
        status.BackgroundColor3 = Color3.fromRGB(50, 255, 120)
        status.TextColor3 = Color3.fromRGB(0, 0, 0)
    else
        if connections.infJump then connections.infJump:Disconnect() end
        status.Text = "OFF"
        status.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        status.TextColor3 = Color3.fromRGB(200, 200, 200)
    end
end)

-- TP TO SELECTED (HUMP LIST)
createButton("TP to Selected (Hump List)", "üéØ", 6, function(btn, status)
    if selectedPlayerHump and selectedPlayerHump.Character then
        local targetRoot = selectedPlayerHump.Character:FindFirstChild("HumanoidRootPart")
        if targetRoot then
            rootPart.CFrame = targetRoot.CFrame * CFrame.new(0, 0, 3)
            print("Teleported to: " .. selectedPlayerHump.Name)
        end
    else
        warn("No player selected in Hump List!")
    end
end)

-- HUMP SELECTED
createButton("Hump Selected (Hump List)", "üòà", 7, function(btn, status)
    states.hump = not states.hump
    
    if states.hump then
        if not selectedPlayerHump then
            states.hump = false
            warn("No player selected!")
            return
        end
        
        connections.hump = RunService.Heartbeat:Connect(function()
            if not states.hump or not selectedPlayerHump then return end
            
            if selectedPlayerHump.Character then
                local targetRoot = selectedPlayerHump.Character:FindFirstChild("HumanoidRootPart")
                if targetRoot then
                    local time = tick()
                    local yOffset = math.sin(time * 8) * 0.3
                    local zOffset = math.sin(time * 8) * 0.5
                    
                    rootPart.CFrame = targetRoot.CFrame * CFrame.new(0, yOffset, 1.5 + zOffset)
                end
            end
        end)
        
        status.Text = "ON"
        status.BackgroundColor3 = Color3.fromRGB(50, 255, 120)
        status.TextColor3 = Color3.fromRGB(0, 0, 0)
    else
        if connections.hump then connections.hump:Disconnect() end
        status.Text = "OFF"
        status.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        status.TextColor3 = Color3.fromRGB(200, 200, 200)
    end
end)

-- BRING SELECTED
createButton("Bring Selected (Bring List)", "üí´", 8, function(btn, status)
    if selectedPlayerBring and selectedPlayerBring.Character then
        local targetRoot = selectedPlayerBring.Character:FindFirstChild("HumanoidRootPart")
        if targetRoot then
            targetRoot.CFrame = rootPart.CFrame * CFrame.new(0, 0, -3)
            print("Brought: " .. selectedPlayerBring.Name)
        end
    else
        warn("No player selected in Bring List!")
    end
end)

-- BRING ALL
createButton("Bring All Players (Circle)", "üåÄ", 9, function(btn, status)
    states.bringAll = not states.bringAll
    
    if states.bringAll then
        connections.bringAll = RunService.Heartbeat:Connect(function()
            if not states.bringAll then return end
            
            local angle = 0
            local radius = 5
            
            for _, targetPlayer in pairs(Players:GetPlayers()) do
                if targetPlayer ~= player and targetPlayer.Character then
                    local targetRoot = targetPlayer.Character:FindFirstChild("HumanoidRootPart")
                    if targetRoot then
                        local x = math.cos(angle) * radius
                        local z = math.sin(angle) * radius
                        targetRoot.CFrame = rootPart.CFrame * CFrame.new(x, 0, z)
                        angle = angle + (math.pi * 2) / #Players:GetPlayers()
                    end
                end
            end
        end)
        
        status.Text = "ON"
        status.BackgroundColor3 = Color3.fromRGB(50, 255, 120)
        status.TextColor3 = Color3.fromRGB(0, 0, 0)
    else
        if connections.bringAll then connections.bringAll:Disconnect() end
        status.Text = "OFF"
        status.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        status.TextColor3 = Color3.fromRGB(200, 200, 200)
    end
end)

-- FULLBRIGHT
createButton("FullBright", "üí°", 10, function(btn, status)
    states.fullbright = not states.fullbright
    
    if states.fullbright then
        Lighting.Brightness = 2
        Lighting.Ambient = Color3.new(1, 1, 1)
        status.Text = "ON"
        status.BackgroundColor3 = Color3.fromRGB(50, 255, 120)
        status.TextColor3 = Color3.fromRGB(0, 0, 0)
    else
        Lighting.Brightness = 1
        Lighting.Ambient = Color3.new(0.5, 0.5, 0.5)
        status.Text = "OFF"
        status.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        status.TextColor3 = Color3.fromRGB(200, 200, 200)
    end
end)

-- INFINITE YIELD
createButton("Load Infinite Yield", "üìú", 11, function(btn, status)
    loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
    print("Infinite Yield Loaded!")
end)

-- Initial player list load
updatePlayerLists()

-- Entrance animation
mainFrame.Size = UDim2.new(0, 0, 0, 0)
playerListHump.Size = UDim2.new(0, 0, 0, 0)
playerListBring.Size = UDim2.new(0, 0, 0, 0)

wait(0.1)

TweenService:Create(mainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back), {
    Size = UDim2.new(0, 500, 0, 450)
}):Play()

wait(0.2)

TweenService:Create(playerListHump, TweenInfo.new(0.5, Enum.EasingStyle.Back), {
    Size = UDim2.new(0, 250, 0, 450)
}):Play()

wait(0.2)

TweenService:Create(playerListBring, TweenInfo.new(0.5, Enum.EasingStyle.Back), {
    Size = UDim2.new(0, 250, 0, 450)
}):Play()

