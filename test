-- NEXA â†’ CHILLI ULTRA SIMPLE
-- Finds textbox in "Chilli Hub Premium" GUI

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

print("\nâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
print("ğŸ”— NEXA â†’ CHILLI (By GUI Name)")
print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n")

-- Find Chilli by looking for GUI with "Chilli" in the name
local function findChilliGui()
	print("ğŸ” Looking for Chilli Hub GUI...")
	
	for _, gui in pairs(playerGui:GetChildren()) do
		local name = gui.Name
		print("  Checking:", name)
		
		-- Check if name contains "Chilli"
		if name:find("Chilli") or name:find("chilli") then
			print("âœ… FOUND CHILLI GUI:", name)
			return gui
		end
	end
	
	print("âŒ No GUI with 'Chilli' in name found")
	return nil
end

-- Find the textbox in Chilli
local function findJobIdInput()
	local chilliGui = findChilliGui()
	
	if not chilliGui then 
		print("âŒ Chilli GUI not found")
		return nil 
	end
	
	print("\nğŸ” Looking for textbox in Chilli...")
	
	-- Find ALL visible textboxes in this GUI
	local textboxes = {}
	for _, obj in pairs(chilliGui:GetDescendants()) do
		if obj:IsA("TextBox") and obj.Visible then
			table.insert(textboxes, obj)
			print("ğŸ“¦ Found TextBox:")
			print("   Path:", obj:GetFullName())
			print("   Name:", obj.Name)
			print("   Placeholder:", obj.PlaceholderText or "none")
			print("   Visible:", obj.Visible)
			print("")
		end
	end
	
	if #textboxes == 1 then
		print("âœ… Found exactly 1 textbox - using it!")
		return textboxes[1]
	elseif #textboxes > 1 then
		print("âš ï¸ Found", #textboxes, "textboxes - using the first one")
		return textboxes[1]
	else
		print("âŒ No textboxes found in Chilli")
		return nil
	end
end

-- PASTE FUNCTION
local function pasteJobId(jobId)
	print("\nâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
	print("ğŸ“¤ ATTEMPTING TO PASTE:", jobId)
	print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n")
	
	local textbox = findJobIdInput()
	
	if textbox then
		-- Paste it!
		textbox.Text = jobId
		
		print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
		print("âœ… SUCCESS! PASTED TO CHILLI")
		print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n")
		
		-- Green flash
		pcall(function()
			local original = textbox.BackgroundColor3
			textbox.BackgroundColor3 = Color3.fromRGB(0, 255, 136)
			task.wait(0.5)
			textbox.BackgroundColor3 = original
		end)
		
		return true
	else
		print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
		print("âŒ FAILED TO PASTE")
		print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n")
		return false
	end
end

-- GLOBAL TEST FUNCTION
_G.NexaTest = function(jobId)
	jobId = jobId or "test-job-12345"
	return pasteJobId(jobId)
end

