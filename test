-- NEXA CHILLI TEST BUTTON
-- Creates a button to test the paste function

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create test GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NexaTestButton"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Test button
local testButton = Instance.new("TextButton")
testButton.Size = UDim2.new(0, 200, 0, 50)
testButton.Position = UDim2.new(0.5, -100, 0.1, 0)
testButton.BackgroundColor3 = Color3.fromRGB(0, 255, 136)
testButton.Font = Enum.Font.GothamBold
testButton.Text = "TEST PASTE TO CHILLI"
testButton.TextColor3 = Color3.fromRGB(20, 20, 25)
testButton.TextSize = 14
testButton.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 10)
corner.Parent = testButton

-- Click handler
testButton.MouseButton1Click:Connect(function()
	testButton.Text = "TESTING..."
	testButton.BackgroundColor3 = Color3.fromRGB(255, 211, 61)
	
	task.wait(0.3)
	
	-- Call the test function
	if _G.NexaTest then
		_G.NexaTest("test-job-12345")
		
		task.wait(1)
		testButton.Text = "✅ TEST COMPLETE!"
		testButton.BackgroundColor3 = Color3.fromRGB(0, 255, 136)
	else
		testButton.Text = "❌ NEXA NOT LOADED"
		testButton.BackgroundColor3 = Color3.fromRGB(255, 68, 68)
	end
	
	task.wait(2)
	testButton.Text = "TEST PASTE TO CHILLI"
	testButton.BackgroundColor3 = Color3.fromRGB(0, 255, 136)
end)

print("✅ Test button created! Click the green button at the top of your screen")
