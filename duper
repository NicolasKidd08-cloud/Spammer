-- FIND CHILLI BY SERVER TOOLS FRAME
-- Searches for the GUI containing Server Tools

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

print("\nâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
print("ðŸ” SEARCHING BY FRAME STRUCTURE")
print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n")

-- Look for ANY GUI with a frame visible in center-left area
print("Looking for GUIs with visible frames...")

for _, gui in pairs(playerGui:GetChildren()) do
    if gui:IsA("ScreenGui") and gui.Enabled then
        
        -- Look for frames that might be Chilli's main window
        for _, frame in pairs(gui:GetDescendants()) do
            if frame:IsA("Frame") and frame.Visible then
                
                -- Check size - Chilli's main frame is probably medium-sized
                local size = frame.AbsoluteSize
                if size.X > 300 and size.X < 600 and size.Y > 400 and size.Y < 700 then
                    
                    -- Check if it has textboxes (which Chilli does)
                    local hasTextBox = false
                    for _, child in pairs(frame:GetDescendants()) do
                        if child:IsA("TextBox") then
                            hasTextBox = true
                            break
                        end
                    end
                    
                    if hasTextBox then
                        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
                        print("ðŸŽ¯ FOUND POTENTIAL CHILLI FRAME!")
                        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
                        print("Parent GUI:", gui.Name)
                        print("Frame Name:", frame.Name)
                        print("Frame Size:", size.X, "x", size.Y)
                        print("Frame Path:", frame:GetFullName())
                        print("")
                        
                        -- Find ALL textboxes in this frame
                        print("ðŸ“¦ TEXTBOXES IN THIS FRAME:")
                        for _, obj in pairs(frame:GetDescendants()) do
                            if obj:IsA("TextBox") and obj.Visible then
                                print("  âœ… TextBox:", obj.Name)
                                print("     Full Path:", obj:GetFullName())
                                print("     Placeholder:", obj.PlaceholderText or "none")
                                print("     Parent:", obj.Parent and obj.Parent.Name or "none")
                                print("")
                            end
                        end
                        
                        -- Find buttons
                        print("ðŸ”˜ BUTTONS IN THIS FRAME:")
                        for _, obj in pairs(frame:GetDescendants()) do
                            if obj:IsA("TextButton") and obj.Visible then
                                print("  ðŸ”˜ Button:", obj.Text or obj.Name)
                                print("     Path:", obj:GetFullName())
                                print("")
                            end
                        end
                        
                        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n")
                    end
                end
            end
        end
    end
end

print("âœ… SEARCH COMPLETE!")
print("\nðŸ’¡ Look for the frame that matches Chilli's window size")
print("ðŸ“‹ Then tell me the GUI name and textbox path!\n")

