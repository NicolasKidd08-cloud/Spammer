-- UI Script for Dupe Feature in "Steal a Brain Rot"

-- Create the main UI screen
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create the main frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 200, 0, 100)
mainFrame.Position = UDim2.new(0.5, -100, 0.5, -50)
mainFrame.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
mainFrame.BorderSizePixel = 2
mainFrame.BorderColor3 = Color3.new(0.5, 0.5, 0.5)
mainFrame.Parent = screenGui

-- Create the "Dupe" button
local dupeButton = Instance.new("TextButton")
dupeButton.Size = UDim2.new(0, 180, 0, 50)
dupeButton.Position = UDim2.new(0.5, -90, 0.5, -25)
dupeButton.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
dupeButton.BorderSizePixel = 2
dupeButton.BorderColor3 = Color3.new(0.5, 0.5, 0.5)
dupeButton.Text = "Dupe: Off"
dupeButton.TextColor3 = Color3.new(1, 1, 1)
dupeButton.TextSize = 24
dupeButton.Parent = mainFrame

-- Variable to track the dupe state
local isDupeOn = false

-- Function to toggle the dupe state
local function toggleDupe()
    isDupeOn = not isDupeOn
    if isDupeOn then
        dupeButton.Text = "Dupe: On"
    else
        dupeButton.Text = "Dupe: Off"
    end
end

-- Connect the button click to the toggle function
dupeButton.MouseButton1Click:Connect(toggleDupe)

-- Function to handle the dupe logic
local function handleDupe()
    if isDupeOn then
        -- Logic to duplicate the Brain Rot
        local brainRot = -- Your logic to get the Brain Rot object
        local duplicate = brainRot:Clone()
        duplicate.Parent = workspace -- Or wherever you want to place the duplicate
        print("Brain Rot duplicated!")
    else
        print("Dupe is off. Brain Rot will be placed normally.")
    end
end

-- Connect the handleDupe function to the appropriate event
-- For example, if you have a specific event for placing the Brain Rot
-- game.Players.LocalPlayer.CharacterAdded:Connect(handleDupe)

-- Example event connection (replace with actual event in your game)
game:GetService("UserInputService").InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.E then
        handleDupe()
    end
end)

